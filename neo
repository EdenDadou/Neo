#!/bin/bash

# Neo AI - Lanceur principal intelligent
# S'auto-répare et configure tout automatiquement
# Usage: ./neo [command]

set -e

# Couleurs
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
MAGENTA='\033[0;35m'
WHITE='\033[1;37m'
NC='\033[0m'
BOLD='\033[1m'
DIM='\033[2m'

# Répertoire du script
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Logo
print_logo() {
    clear
    echo ""
    echo -e "${CYAN}"
    cat << 'EOF'
    ███╗   ██╗███████╗ ██████╗
    ████╗  ██║██╔════╝██╔═══██╗
    ██╔██╗ ██║█████╗  ██║   ██║
    ██║╚██╗██║██╔══╝  ██║   ██║
    ██║ ╚████║███████╗╚██████╔╝
    ╚═╝  ╚═══╝╚══════╝ ╚═════╝
EOF
    echo -e "${NC}"
    echo -e "    ${DIM}Assistant IA Multi-Agents${NC} ${WHITE}v0.2.0${NC}"
    echo ""
}

# Configurer la clé API de manière interactive
configure_api_key() {
    echo ""
    echo -e "    ${YELLOW}Configuration requise${NC}"
    echo -e "    ${DIM}─────────────────────────────────────────${NC}"
    echo ""
    echo -e "    Neo a besoin d'une clé API Anthropic pour fonctionner."
    echo -e "    ${DIM}Obtenez-la sur: https://console.anthropic.com${NC}"
    echo ""

    while true; do
        read -p "    Clé API Anthropic: " API_KEY

        if [[ "$API_KEY" =~ ^sk-ant- ]]; then
            break
        else
            echo -e "    ${RED}Format invalide.${NC} La clé doit commencer par ${WHITE}sk-ant-${NC}"
        fi
    done

    # Créer le .env
    cat > .env << EOF
# Neo AI Configuration
ANTHROPIC_API_KEY=$API_KEY
PORT=3001
CORS_ORIGIN=http://localhost:5173
JWT_SECRET=neo-$(date +%s)-$RANDOM$RANDOM
NODE_ENV=production
EOF

    echo -e "    ${GREEN}✓${NC} Configuration sauvegardée"
    return 0
}

# Vérification et auto-réparation
ensure_ready() {
    echo -e "    ${DIM}Vérification du système...${NC}"
    echo ""

    local needs_fix=0

    # 1. Node.js
    if command -v node &> /dev/null; then
        local node_version=$(node -v)
        echo -e "    ${GREEN}✓${NC} Node.js ${WHITE}$node_version${NC}"
    else
        echo -e "    ${RED}✗${NC} Node.js non installé"
        echo ""
        echo -e "    ${YELLOW}Installez Node.js 20+:${NC}"
        echo -e "    ${DIM}curl -fsSL https://deb.nodesource.com/setup_20.x | sudo -E bash -${NC}"
        echo -e "    ${DIM}sudo apt-get install -y nodejs${NC}"
        exit 1
    fi

    # 2. npm
    if command -v npm &> /dev/null; then
        echo -e "    ${GREEN}✓${NC} npm ${WHITE}v$(npm -v)${NC}"
    else
        echo -e "    ${RED}✗${NC} npm non installé"
        exit 1
    fi

    # 3. Répertoires
    if [ ! -d "data" ]; then
        mkdir -p data/vectors data/logs data/sessions data/backups
        echo -e "    ${GREEN}✓${NC} Répertoires créés"
    fi

    # 4. .env - Configurer si manquant
    if [ -f ".env" ] && grep -q "ANTHROPIC_API_KEY=sk-ant-" .env 2>/dev/null; then
        echo -e "    ${GREEN}✓${NC} Configuration ${WHITE}.env${NC}"
    else
        echo -e "    ${YELLOW}!${NC} Configuration manquante"
        configure_api_key
        needs_fix=1
    fi

    # 5. Dépendances - Installer/mettre à jour si nécessaire
    if [ -d "node_modules" ]; then
        if [ "package.json" -nt "node_modules" ] 2>/dev/null || [ "package-lock.json" -nt "node_modules" ] 2>/dev/null; then
            echo -e "    ${YELLOW}!${NC} Mise à jour des dépendances..."
            npm install --silent 2>/dev/null || npm install
            touch node_modules
            echo -e "    ${GREEN}✓${NC} Dépendances mises à jour"
        else
            echo -e "    ${GREEN}✓${NC} Dépendances installées"
        fi
    else
        echo -e "    ${YELLOW}!${NC} Installation des dépendances..."
        npm install --silent 2>/dev/null || npm install
        touch node_modules
        echo -e "    ${GREEN}✓${NC} Dépendances installées"
    fi

    # 6. Ollama (optionnel)
    if command -v ollama &> /dev/null; then
        echo -e "    ${GREEN}✓${NC} Ollama ${DIM}(embeddings locaux)${NC}"
    else
        echo -e "    ${DIM}○${NC} Ollama ${DIM}(optionnel)${NC}"
    fi

    echo ""

    if [ $needs_fix -eq 1 ]; then
        echo -e "    ${GREEN}✓${NC} ${WHITE}Configuration terminée!${NC}"
        echo ""
    fi
}

# Démarrer Ollama si disponible
start_ollama() {
    if command -v ollama &> /dev/null; then
        if ! pgrep -x "ollama" > /dev/null 2>&1; then
            ollama serve > /dev/null 2>&1 &
            sleep 2
        fi
    fi
}

# Menu principal
show_menu() {
    echo -e "    ${WHITE}${BOLD}Que souhaitez-vous faire?${NC}"
    echo ""
    echo -e "    ${CYAN}[1]${NC} ${WHITE}Chat${NC}         Mode conversation interactif"
    echo -e "    ${CYAN}[2]${NC} ${WHITE}API${NC}          Serveur REST (port 3001)"
    echo -e "    ${CYAN}[3]${NC} ${WHITE}Web${NC}          Dashboard + API"
    echo -e "    ${CYAN}[4]${NC} ${WHITE}Status${NC}       État du système"
    echo ""
    echo -e "    ${DIM}[q] Quitter${NC}"
    echo ""
    printf "    ${CYAN}▶${NC} "
}

# Afficher le status
show_status() {
    echo ""
    echo -e "    ${WHITE}${BOLD}État du système${NC}"
    echo -e "    ${DIM}─────────────────────────────────${NC}"
    echo ""

    # Base de données
    if [ -f "data/memory.db" ]; then
        local db_size=$(du -h data/memory.db 2>/dev/null | cut -f1)
        echo -e "    ${GREEN}●${NC} Base de données  ${WHITE}$db_size${NC}"
    else
        echo -e "    ${DIM}○${NC} Base de données  ${DIM}vide${NC}"
    fi

    # Sessions
    local sessions=$(ls data/sessions/*.json 2>/dev/null | wc -l | tr -d ' ')
    if [ "$sessions" -gt 0 ] 2>/dev/null; then
        echo -e "    ${GREEN}●${NC} Sessions         ${WHITE}$sessions${NC}"
    else
        echo -e "    ${DIM}○${NC} Sessions         ${DIM}aucune${NC}"
    fi

    # API
    if curl -s http://localhost:3001/health > /dev/null 2>&1; then
        echo -e "    ${GREEN}●${NC} API              ${WHITE}en ligne${NC} ${DIM}:3001${NC}"
    else
        echo -e "    ${DIM}○${NC} API              ${DIM}hors ligne${NC}"
    fi

    # Dashboard
    if curl -s http://localhost:5173 > /dev/null 2>&1; then
        echo -e "    ${GREEN}●${NC} Dashboard        ${WHITE}en ligne${NC} ${DIM}:5173${NC}"
    else
        echo -e "    ${DIM}○${NC} Dashboard        ${DIM}hors ligne${NC}"
    fi

    # Ollama
    if pgrep -x "ollama" > /dev/null 2>&1; then
        echo -e "    ${GREEN}●${NC} Ollama           ${WHITE}actif${NC}"
    elif command -v ollama &> /dev/null; then
        echo -e "    ${DIM}○${NC} Ollama           ${DIM}arrêté${NC}"
    fi

    echo ""
}

# Démarrer le chat CLI
start_chat() {
    echo ""
    echo -e "    ${GREEN}●${NC} ${WHITE}Démarrage du mode conversation...${NC}"
    echo ""
    echo -e "    ${DIM}─────────────────────────────────────────${NC}"
    echo ""

    start_ollama
    exec npm run dev:cli
}

# Démarrer l'API
start_api() {
    echo ""
    echo -e "    ${GREEN}●${NC} ${WHITE}Démarrage du serveur API...${NC}"
    echo -e "    ${DIM}   http://localhost:3001${NC}"
    echo ""

    start_ollama
    exec npm run dev
}

# Démarrer le web complet
start_web() {
    echo ""
    echo -e "    ${GREEN}●${NC} ${WHITE}Démarrage du dashboard...${NC}"
    echo -e "    ${DIM}   Dashboard: http://localhost:5173${NC}"
    echo -e "    ${DIM}   API:       http://localhost:3001${NC}"
    echo ""

    start_ollama

    # Démarrer l'API en background
    npm run dev &
    API_PID=$!

    # Attendre que l'API soit prête
    sleep 3

    # Démarrer le frontend
    npm run dev:web

    # Cleanup
    kill $API_PID 2>/dev/null
}

# Mettre à jour Neo
do_update() {
    echo ""
    echo -e "    ${CYAN}●${NC} ${WHITE}Mise à jour de Neo...${NC}"
    echo ""

    # Git pull
    if [ -d ".git" ]; then
        echo -e "    ${DIM}Récupération des mises à jour...${NC}"
        git pull --quiet 2>/dev/null && echo -e "    ${GREEN}✓${NC} Code mis à jour" || echo -e "    ${YELLOW}!${NC} Pas de mise à jour git"
    fi

    # npm install
    echo -e "    ${DIM}Mise à jour des dépendances...${NC}"
    npm install --silent 2>/dev/null || npm install
    touch node_modules
    echo -e "    ${GREEN}✓${NC} Dépendances à jour"

    echo ""
    echo -e "    ${GREEN}✓${NC} ${WHITE}Neo est à jour!${NC}"
    echo ""
}

# Reconfigurer
do_config() {
    echo ""
    configure_api_key
    echo ""
}

# Gestion des arguments
case "${1:-}" in
    chat|c|cli)
        print_logo
        ensure_ready
        start_chat
        ;;
    api|a|server)
        print_logo
        ensure_ready
        start_api
        ;;
    web|w|dashboard)
        print_logo
        ensure_ready
        start_web
        ;;
    status|s)
        print_logo
        show_status
        ;;
    update|u|upgrade)
        print_logo
        do_update
        ;;
    config|configure)
        print_logo
        do_config
        ;;
    help|h|--help|-h)
        print_logo
        echo -e "    ${WHITE}${BOLD}Usage:${NC} ./neo ${DIM}[command]${NC}"
        echo ""
        echo -e "    ${WHITE}Commandes:${NC}"
        echo -e "    ${CYAN}chat${NC}      ${DIM}(c)${NC}   Mode conversation interactif"
        echo -e "    ${CYAN}api${NC}       ${DIM}(a)${NC}   Serveur REST uniquement"
        echo -e "    ${CYAN}web${NC}       ${DIM}(w)${NC}   Dashboard + API"
        echo -e "    ${CYAN}status${NC}    ${DIM}(s)${NC}   État du système"
        echo -e "    ${CYAN}update${NC}    ${DIM}(u)${NC}   Mettre à jour Neo"
        echo -e "    ${CYAN}config${NC}          Reconfigurer les clés API"
        echo ""
        echo -e "    ${DIM}Sans argument: menu interactif${NC}"
        echo ""
        ;;
    "")
        # Menu interactif
        print_logo
        ensure_ready

        while true; do
            show_menu
            read -n1 choice
            echo ""

            case $choice in
                1) start_chat ;;
                2) start_api ;;
                3) start_web ;;
                4) show_status ;;
                q|Q)
                    echo ""
                    echo -e "    ${DIM}À bientôt!${NC}"
                    echo ""
                    exit 0
                    ;;
                *)
                    echo -e "    ${RED}Option invalide${NC}"
                    ;;
            esac
        done
        ;;
    *)
        echo -e "${RED}Commande inconnue: $1${NC}"
        echo "Utilisez ./neo --help pour l'aide"
        exit 1
        ;;
esac

{
  "name": "neo-ai",
  "version": "0.2.0",
  "description": "Neo - Assistant IA multi-agents avec mémoire persistante 10 ans, auto-amélioration et véracité garantie",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "neo": "./neo",
    "setup": "tsx install.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "dev:cli": "tsx src/index.ts",
    "dev:watch": "tsx watch src/server.ts",
    "dev:web": "cd web && npm run dev",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "bin": {
    "neo": "./neo"
  },
  "keywords": [
    "neo",
    "ai",
    "assistant",
    "multi-agent",
    "memory",
    "learning",
    "claude",
    "llm",
    "self-improving"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@xenova/transformers": "^2.17.2",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "rate-limiter-flexible": "^9.1.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.18.1",
    "eslint": "^9.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
